
:root{
--cor-de-fundo: #ebecee;
--branco: #FFFFFF;
--laranja: #EB9B00;
--fonte-principal: "Poopins";
}
body{
    background-color: black;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-size: 16px;
    font-weight: 400;
}
.cabeçalho_menu-hamburguer{
    width: 24px;
    height: 24px;
    background-image: url(./img/Menu.svg);
    background-repeat: no-repeat;
    background-position: center;
    display: inline-block;
}
.cabeçalho{
    background-color: green;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}
.container{
    display: flex;
    align-items: center;
}
.container_imagem {
padding: 12px;
margin: 14px;
width: 5em;
}
.container_botão:checked ~.lista-menu {
    display: block;
}
.lista-menu_titulo,
.lista-menu_item{
    padding: 1em;
    background-color: var(--branco);
}
.lista-menu_titulo {
    color: var(--laranja);
    font-weight: 700;
}
.lista-menu_link{
    -webkit-background-clip: text;
    background-clip: text;
    text-transform: uppercase;
}
.lista-menu{
    display: inline-block;
    position: absolute;
    top: 100%;
    width: 15vw;

}
.container_botão{
    display: none;
}
